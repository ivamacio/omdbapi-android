<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_padding_size_medium_large"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/elevation"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_padding_size_micro"
        android:paddingEnd="@dimen/margin_padding_size_small"
        android:paddingStart="@dimen/margin_padding_size_small"
        android:paddingTop="@dimen/margin_padding_size_micro">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_size_small"
            android:backgroundTint="@android:color/transparent"
            android:drawableEnd="@drawable/ic_search"
            android:hint="@string/results"
            android:imeOptions="actionSearch"
            android:inputType="text" />

    </LinearLayout>

</LinearLayout>